@if (@ViewBag.Success == true)
{
    <h2>Operation Tweet @ViewBag.ActionType succeeded!</h2>
}
else
{
    <h2>Operation Tweet @ViewBag.ActionType failed!</h2>
}

<div>
    @if (@ViewBag.ActionType == "Delete" && @ViewBag.Success == true)
    {
        <div>Tweet has already been deleted!</div>
    }
    else
    {
        <a href="https://twitter.com/statuses/@ViewBag.TweetId">View your tweet on Twitter</a>

        <span class="btn btn-default">
            @Html.ActionLink("Delete Tweet", "DeleteTweet", "Tweet", new { id = @ViewBag.TweetId }, null)
        </span>
    }
</div>